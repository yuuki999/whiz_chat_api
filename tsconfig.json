{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "noErrorTruncation": true, // エディタで型の情報を省略表示しない。
    "outDir": "./dist" // distは使わないが、将来最適化したい時のために残しておく。
  },
  "include": ["src/**/*", "prisma"],
  "exclude": ["node_modules"]
}
